<UserControl x:Class="MHSS.Views.Controls.SkillLevelSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodel="clr-namespace:MHSS.ViewModels.Controls"
             d:DataContext="{d:DesignInstance Type=viewmodel:SkillLevelSelectorViewModel}"
             Height="30" Width="100">
    <Border Padding="0">
        <Border.Style>
            <Style TargetType="{x:Type Border}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="4"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=Selected.Value}" Value="true">
                        <Setter Property="BorderBrush" Value="Orange"/>
                        <Setter Property="BorderThickness" Value="4"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
            <ComboBox VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                      ItemsSource="{Binding Path=Items.Value, Mode=OneWay}"
                      DisplayMemberPath="DisplayName"
                      SelectedIndex="0"
                      SelectedItem="{Binding Path=SelectedSkill.Value}"
                      />
    </Border>
</UserControl>
