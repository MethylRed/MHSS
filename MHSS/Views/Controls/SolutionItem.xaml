<UserControl x:Class="MHSS.Views.Controls.SolutionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MHSS.Views.Controls"
             xmlns:ctrl="clr-namespace:MHSS.ViewModels.Controls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=ctrl:SolutionItemViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Gainsboro" BorderThickness="1">
        <Expander Grid.Column="0" Margin="0,0,0,0" Height="Auto" Width="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                  BorderThickness="0" BorderBrush="Transparent">
            <Expander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" HorizontalAlignment="{Binding HorizontalAlignment, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContentPresenter}}, Mode=OneWayToSource}"
                          Height="30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Viewbox Stretch="Uniform" Grid.Column="0" Height="20">
                            <TextBlock Text="{Binding Weapon.Value, Mode=OneWay}" FontSize="16" Margin="0,0,10,0"/>
                        </Viewbox>
                        <Viewbox Stretch="Uniform" Grid.Column="1" Height="20">
                            <TextBlock Text="{Binding Head.Value, Mode=OneWay}" FontSize="16" Margin="0,0,10,0"/>
                        </Viewbox>
                        <Viewbox Stretch="Uniform" Grid.Column="2" Height="20">
                            <TextBlock Text="{Binding Body.Value, Mode=OneWay}" FontSize="16" Margin="0,0,10,0"/>
                        </Viewbox>
                        <Viewbox Stretch="Uniform" Grid.Column="3" Height="20">
                            <TextBlock Text="{Binding Arm.Value, Mode=OneWay}" FontSize="16" Margin="0,0,10,0"/>
                        </Viewbox>
                        <Viewbox Stretch="Uniform" Grid.Column="4" Height="20">
                            <TextBlock Text="{Binding Waist.Value, Mode=OneWay}" FontSize="16" Margin="0,0,10,0"/>
                        </Viewbox>
                        <Viewbox Stretch="Uniform" Grid.Column="5" Height="20">
                            <TextBlock Text="{Binding Leg.Value, Mode=OneWay}" FontSize="16" Margin="0,0,10,0"/>
                        </Viewbox>
                        <Viewbox Stretch="Uniform" Grid.Column="6" Height="20">
                            <TextBlock Text="{Binding Charm.Value, Mode=OneWay}" FontSize="16" Margin="0,0,10,0"/>
                        </Viewbox>
                    </Grid>
                    <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1"></Border>
                </Grid>
            </Expander.Header>
            <Grid Height="350">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Weapon.Value, Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="1" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Head.Value, Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="2" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Body.Value, Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="3" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Arm.Value, Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="4" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Waist.Value, Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="5" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Leg.Value, Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="6" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Charm.Value, Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[0], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="1" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[1], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="2" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[2], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="3" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[3], Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="4" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[4], Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="5" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[5], Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="6" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[6], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="7" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[7], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="8" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[8], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="9" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[9], Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="10" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[10], Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="11" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[11], Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="12" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[12], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="13" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[13], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="14" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[14], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="15" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[15], Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="16" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[16], Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="17" Background="White" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[17], Mode=OneWay}" Height="Auto" Width="200" Background="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="18" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[18], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="19" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[19], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                    <Border Grid.Row="20" Background="WhiteSmoke" Margin="20,0,0,0">
                        <TextBlock Text="{Binding Deco.Value[20], Mode=OneWay}" Height="Auto" Width="200" Background="WhiteSmoke" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
                    </Border>
                </Grid>

                <!--<TextBlock Text="{Binding Deco.Value, Mode=OneWay}" Grid.Column="1" Height="Auto" Width="200" Background="White" FontSize="12" Margin="10,0,0,0" Foreground="Black"/>-->
                <TextBlock Text="{Binding Skill.Value, Mode=OneWay}" Grid.Column="2" Height="Auto" Width="200" Background="White" FontSize="12" Margin="10,0,0,0" Foreground="Black"/>


            </Grid>

        </Expander>
    </Border>
</UserControl>
