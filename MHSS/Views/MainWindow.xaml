<Window x:Class="MHSS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:subviews="clr-namespace:MHSS.Views.SubViews"
        xmlns:viewmodels="clr-namespace:MHSS.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        Title="MHSS" Height="720" Width="1280" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
        
            <Border Grid.Column="0" Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="3">
                <TabControl Grid.Column="0" Margin="5">
                    <TabItem Header="スキル選択">
                        <Grid>
                            <subviews:SkillSelectView DataContext="{Binding SkillSelectVM.Value, Mode=OneWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="武器選択">
                    </TabItem>
                </TabControl>
            </Border>

            <Border Grid.Column="0" Grid.Row="1" Margin="5,0,5,5" BorderThickness="1" BorderBrush="Black" CornerRadius="3">
                <Button Grid.Row="1" Margin="0,0,10,0"
                        x:Name="SolveButton"
                        Command="{Binding SolveCommand}"
                        Height="30" Width="100"
                        Content="🔍検索"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Gainsboro" />
                            <Setter Property="Foreground" Value="DodgerBlue" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate x:Name="button" TargetType="Button">
                                        <Border x:Name="border" CornerRadius="15" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="LightGray" />
                                                <!-- マウスオーバー時の背景色を変更 -->
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>

        <Border Grid.Column="1" CornerRadius="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <ScrollViewer VerticalAlignment="Stretch">
                <StackPanel Margin="0">
                    <ItemsControl ItemsSource="{Binding SolutionVM, Mode=OneWay}">
                        <DataTemplate>
                            <!--<subviews:Solution HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>-->
                            <TextBlock Text="1"/>
                        </DataTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Button
            x:Name="ForDebugButton"
            Command="{Binding ClickCommand}"
            Height="50" Width="100"
            Content="Click Here"
            Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            />
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
