<UserControl x:Class="MHSS.Views.SubViews.SkillSelectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:local="clr-namespace:MHSS.Views.SubViews"
             xmlns:ctrl="clr-namespace:MHSS.Views.Controls"
             xmlns:subviewmodels="clr-namespace:MHSS.ViewModels.SubView"
             d:DataContext="{d:DesignInstance Type=subviewmodels:SkillSelectViewModel}"
             Height="Auto" Width="Auto"
             d:DesignHeight="700" d:DesignWidth="600"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2" CornerRadius="3" Background="White">
            <Grid Margin="5">
                <ScrollViewer VerticalAlignment="Stretch">
                    <StackPanel Margin="0,0,3,100">
                        <ItemsControl ItemsSource="{Binding SkillLevelSelectorsByCategoryVM.Value, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ctrl:SkillLevelSelectorsByCategory/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Border>
        <Button Grid.Row="1" Margin="0,0,10,5"
                x:Name="ForDebugButton"
                Command="{Binding SolveCommand}"
                Height="30" Width="100"
                Content="🔍検索"
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="20"
                FontWeight="Bold"
                >
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Gainsboro" />
                    <Setter Property="Foreground" Value="DodgerBlue" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate x:Name="button" TargetType="Button">
                                <Border x:Name="border" CornerRadius="15" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="LightGray" />
                                        <!-- マウスオーバー時の背景色を変更 -->
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>
